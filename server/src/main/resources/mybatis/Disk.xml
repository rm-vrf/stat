<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="cn.batchfile.stat.server.dao.DiskDao" >

	<insert id="insertDisk" parameterType="Disk">
		REPLACE INTO `disk`
		(`agent_id`,`dir_name`,`dev_name`,`type_name`,`sys_type_name`,`options`,`type`,`flags`) 
		VALUES 
		(#{agentId},#{dirName},#{devName},#{typeName},#{sysTypeName},#{options},#{type},#{flags})
	</insert>
	
	<insert id="insertDiskData" parameterType="DiskData">
		REPLACE INTO `disk_data`
		(`agent_id`,`dir_name`,`time`,`total`,`free`,`used`,`avail`,`files`,`free_files`,
		`disk_reads`,`disk_reads_per_second`,`disk_writes`,`disk_writes_per_second`,
		`disk_read_bytes`,`disk_read_bytes_per_second`,`disk_write_bytes`,`disk_write_bytes_per_second`,
		`disk_queue`,`disk_service_time`,`use_percent`)
		VALUES
		(#{agentId},#{dirName},#{time},#{total},#{free},#{used},#{avail},#{files},#{freeFiles},
		#{diskReads},#{diskReadsPerSecond},#{diskWrites},#{diskWritesPerSecond},
		#{diskReadBytes},#{diskReadBytesPerSecond},#{diskWriteBytes},#{diskWriteBytesPerSecond},
		#{diskQueue},#{diskServiceTime},#{usePercent})
	</insert>
	
</mapper>