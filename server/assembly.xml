<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/mavenassembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<formats>
		<format>dir</format>
		<format>zip</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<outputDirectory>/</outputDirectory>
			<directory>target</directory>
			<includes>
				<include>${project.name}.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>/</outputDirectory>
			<directory>src/main/resources/misc</directory>
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>/webapp</outputDirectory>
			<directory>src/main/webapp</directory>
			<excludes>
				<exclude>.DS_Store</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>
